<div class='container'>
    <div class='row'>
        <div class='col-xs-12 text-center' id='top-bar'>
            <h1>Gourmet Burgers</h1>
        </div>
        <div class='col-xs-6 text-center' class='task'>
            <div class='row'>
                <h4>Hamburgers to be Eaten</h4>
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class='col-xs-9 text-center'>
                    <input class='form-control' type='text' placeholder='{{this.id}} {{this.burger_name}}'>
                </div>
                <div class='col-xs-3 text-center'>
                    <button type='submit' data-id={{this.id}} class='eatburger'>EAT IT!</button>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
        <div class='col-xs-6 text-center' class='task'>
            <h4>Hamburgers Eaten</h4>
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class='form-control' type='text' placeholder='{{this.id}} {{this.burger_name}}' readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<div class='container'>
    <div class='row'>
        <div class='col-xs-12 text-center enter-section'>
            <h4>Order here:</h4>
            <form action='/burgers/create' method='POST'>
                <p>What burger do you want to try?</p>
                <input type='text' name='burger_name' class='form-control' value='' id='enter_text'>
                <button type='submit' class='btn btn-primary' id='text-enter-button'>SUBMIT</button>
            </form>

        </div>
    </div>
</div>